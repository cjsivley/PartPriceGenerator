    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        //collect data
        
        //assign variables and constants
        BigDecimal storeMarkup = new BigDecimal(1.33);
        BigDecimal taxMarkup = new BigDecimal(1.09);
        
        BigDecimal refurbDiscount = new BigDecimal(0.5);
        BigDecimal labor = new BigDecimal(60);
        BigDecimal priceWithMarkup = new BigDecimal(0);     
        //declaration of format of output
        NumberFormat n = NumberFormat.getCurrencyInstance(Locale.US);
        //pull from inputBox
        BigDecimal base = new BigDecimal(inputBox.getText());
        BigDecimal shipping = new BigDecimal(shipBox.getText());
        
        //calculate
        BigDecimal laborAndShipping = new BigDecimal(0);
        laborAndShipping = labor.add(shipping);
        priceWithMarkup = base.multiply(storeMarkup); //base price after markup
        BigDecimal priceWithTax = priceWithMarkup.multiply(taxMarkup); // with tax
        //BigDecimal subTotal = priceWithTax.add(shipping);
        BigDecimal priceForRefurb = priceWithTax.multiply(refurbDiscount);
        BigDecimal newPriceWithLabor = priceWithTax.add(laborAndShipping);
        BigDecimal refurbPriceWithLabor = priceForRefurb.add(laborAndShipping);
        //format BigDecimal numbers into strings
        String value = n.format(priceWithTax);
        String refurbValue = n.format(priceForRefurb);
        String totalNew = n.format(newPriceWithLabor);
        String totalRefurb = n.format(refurbPriceWithLabor);
        //report to outputBox
        outputBox.setText("The price is " + value + ".\nThe price for a refurb "
                + "screen would be " + refurbValue + ".\nThe total cost of repair below..."
                + "\nNew: " + totalNew + "\nRefurb: " + totalRefurb);
    }                                        

